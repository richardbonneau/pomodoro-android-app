<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/mainTimerDisplay" android:textSize="30sp"
            android:layout_marginTop="50dp" android:textAlignment="center"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/secondaryTimerDisplay" android:textSize="40sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/mainTimerDisplay" android:textAlignment="center"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="debug"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/debug" android:textSize="40sp"
            android:layout_marginTop="420dp"
            app:layout_constraintTop_toBottomOf="@+id/mainTimerDisplay" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="debug"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/debug2" android:textSize="40sp"
            android:layout_marginTop="500dp"
            app:layout_constraintTop_toBottomOf="@+id/mainTimerDisplay" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.0"/>
    <CheckBox
            android:text="5 minute break"
            android:layout_width="151dp"
            android:layout_height="37dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/firstCheckBox"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/secondaryTimerDisplay" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/secondCheckBox"/>
    <CheckBox
            android:text="5 minute break"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/secondCheckBox" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/thirdCheckBox" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/firstCheckBox"/>
    <CheckBox
            android:text="5 minute break"
            android:layout_width="155dp"
            android:layout_height="49dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/thirdCheckBox" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/fourthCheckBox" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/secondCheckBox"/>
    <CheckBox
            android:text="30 minute break"
            android:layout_width="164dp"
            android:layout_height="44dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/fourthCheckBox" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/thirdCheckBox"/>

</android.support.constraint.ConstraintLayout>