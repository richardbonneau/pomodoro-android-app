<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Pomodoro" android:id="@+id/mainLayout">


    <Spinner
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/spinner" android:dropDownWidth="match_parent"
            android:spinnerMode="dropdown" android:entries="@array/work_time_array" android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Start Working!"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/startWorkingButton" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>